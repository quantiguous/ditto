= nested_form_for @system, :html => {:class => "form-horizontal"} do |f|
  - if @system.errors.any?
    #error_explanation
      %h2
        = pluralize(@system.errors.count, "error")
        prohibited this system from being saved:
      %ul
        - @system.errors.full_messages.each do |message|
          %li= message
  .control-group
    = f.label ' '
  .form-main{:style => 'width:100%'}
    .control-group
      = f.label :name, "Name", :class => 'control-label'
      = f.text_field :name
  .actions
    - (f.object.new_record?) ? label_name = "Create" : label_name = "Update"
    = f.button :submit, :class=>"btn btn-primary", :id => 'submit_bm_app', :value => label_name + ' System'
