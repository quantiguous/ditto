%br
%h3 Matchers
%br
= "Total Count: #{@matchers_count}"
%br
= will_paginate @matchers
%br
%table.table.table-bordered.table-striped.table-hover{:style => 'width: 50%;'}
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Matcher Name
    %th{:style=>'text-align:left; background-color: lightblue;'}
      	   
			
  .tbody
    - @matchers.each do |matcher|
      %tr
        %td{:style=>'text-align:left;'}
          = matcher.name
        %td{:style=>'text-align:left;'}
          = link_to 'View' , matcher
